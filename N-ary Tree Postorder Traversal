class Solution {
public:
    vector<int> postorder(Node* root) {
        vector<int> result;
        if (!root) return result;

        stack<Node*> stk;
        stk.push(root);

        while (!stk.empty()) {
            Node* node = stk.top();
            stk.pop();
            result.push_back(node->val); // push root first

            for (Node* child : node->children) {
                stk.push(child); 
            }
        }

        reverse(result.begin(), result.end()); // reverse for postorder
        return result;
    }
};
